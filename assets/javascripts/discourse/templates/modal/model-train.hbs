{{#d-modal-body class="model-train" title=title}}
  {{combo-box
    content=datasetLabels
    value=datasetIndex
    valueProperty="value"
    onChange=(action (mut datasetIndex))
    options=(hash
      none="ml.admin.model.train.no_dataset"
    )}}
  
  {{d-button
    action="startTraining"
    label="ml.admin.model.train.start"
    class="btn-primary pull-right"
    disabled=noDatasetIndex}}
{{/d-modal-body}}
